<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:minWidth="280dp"
              android:paddingBottom="5dp"
              android:orientation="vertical"
              android:background="@drawable/dialog_back"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:text="@string/sortGoods"
              style="@style/sort_dialog_header_text"
              android:paddingBottom="5dp"
              android:layout_height="wrap_content"/>

    <View android:layout_height="1dp"
          android:background="@drawable/menu_back"
          android:layout_width="wrap_content"/>

    <ScrollView android:layout_height="fill_parent"
                android:scrollbars="vertical"
                android:fadeScrollbars="true"
                android:fillViewport="true"
                android:layout_width="wrap_content">
        <LinearLayout android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:layout_width="wrap_content">

            <RelativeLayout android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/sort_by_name"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="@string/sort_by_name"
                          style="@style/sort_dialog_text_items"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:id="@+id/sort_by_name_img"
                           android:background="@drawable/radio_max_selector"
                           android:layout_width="wrap_content"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                  android:background="@drawable/menu_back"
                  android:layout_width="wrap_content"/>

            <RelativeLayout android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/sort_by_price"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="@string/sort_by_price"
                          style="@style/sort_dialog_text_items"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:id="@+id/sort_by_price_img"
                           android:background="@drawable/radio_max_selector"
                           android:layout_width="wrap_content"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                  android:background="@drawable/menu_back"
                  android:layout_width="wrap_content"/>


            <RelativeLayout android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/sort_by_category"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="@string/sort_by_category"
                          style="@style/sort_dialog_text_items"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:id="@+id/sort_by_category_img"
                           android:background="@drawable/radio_max_selector"
                           android:layout_width="wrap_content"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                  android:background="@drawable/menu_back"
                  android:layout_width="wrap_content"/>


            <RelativeLayout android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/sort_by_priority"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="@string/sort_by_priority"
                          style="@style/sort_dialog_text_items"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:id="@+id/sort_by_priority_img"
                           android:background="@drawable/radio_max_selector"
                           android:layout_width="wrap_content"/>

            </RelativeLayout>

            <View android:layout_height="1dp"
                  android:background="@drawable/menu_back"
                  android:layout_width="wrap_content"/>


            <RelativeLayout android:layout_width="fill_parent"
                            android:padding="10dp"
                            android:id="@+id/sort_by_date"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          style="@style/sort_dialog_text_items"
                          android:text="@string/sort_by_date"
                          android:layout_alignParentLeft="true"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:id="@+id/sort_by_date_img"
                           android:background="@drawable/radio_max_selector"
                           android:layout_width="wrap_content"/>

            </RelativeLayout>

            <LinearLayout android:layout_height="wrap_content"
                          android:gravity="center_horizontal"
                          android:paddingBottom="5dp"
                          android:layout_width="wrap_content">

                <LinearLayout android:layout_height="wrap_content"
                              android:id="@+id/sort_asc_view"
                              android:layout_width="wrap_content">
                    <ImageView android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:id="@+id/sort_asc_img"
                               android:background="@drawable/radio_min_selector"
                               android:layout_width="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              style="@style/sort_dialog_text_sort_type"
                              android:text="@string/sort_asc"
                              android:layout_alignParentLeft="true"
                              android:layout_marginLeft="5dp"
                              android:layout_marginRight="5dp"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:layout_height="wrap_content"
                              android:id="@+id/sort_desc_view"
                              android:layout_width="wrap_content">
                    <ImageView android:layout_height="wrap_content"
                               android:id="@+id/sort_desc_img"
                               android:layout_alignParentRight="true"
                               android:layout_marginLeft="5dp"
                               android:layout_marginRight="5dp"
                               android:background="@drawable/radio_min_selector"
                               android:layout_width="wrap_content"/>

                    <TextView android:layout_width="wrap_content"
                              style="@style/sort_dialog_text_sort_type"
                              android:text="@string/sort_desc"
                              android:layout_alignParentLeft="true"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_height="wrap_content"
                          android:paddingLeft="10dp"
                          android:id="@+id/checkbox_ignore"
                          android:layout_width="wrap_content">

                <ImageView android:layout_height="wrap_content"
                           android:duplicateParentState="true"
                           android:background="@drawable/checkbox_selector"
                           android:paddingRight="5dp"
                           android:layout_width="wrap_content"/>

                <TextView android:layout_height="wrap_content"
                          style="@style/sort_dialog_text_goods_bought"
                          android:text="@string/sort_bought_goods"
                          android:layout_width="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content" android:layout_centerHorizontal="true"
                          android:layout_height="wrap_content"
                          android:paddingLeft="5dp"
                          android:paddingRight="5dp"
                          android:paddingBottom="5dp"
                          android:paddingTop="10dp"
                          android:orientation="horizontal" android:gravity="center"
                          android:layout_gravity="center">
                <Button android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/yes"
                        style="@style/button"
                        android:text="@string/ok" android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
