<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                style="@style/child_layout_style">
    <ImageView android:id="@+id/category_icon"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:adjustViewBounds="true"/>

    <TextView android:layout_width="match_parent"
              style="@style/child_categories_style"
              android:layout_centerVertical="true"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@id/category_icon"
              android:layout_toLeftOf="@+id/category_edit"
              android:id="@+id/title"/>

    <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/category_remove" android:layout_gravity="right"
            android:visibility="gone" android:src="@drawable/category_remove"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>

    <ImageView
            android:id="@+id/category_edit"
            android:layout_toLeftOf="@id/category_remove"
            android:layout_marginRight="10dp"
            android:visibility="gone" android:src="@drawable/category_edit"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>


</RelativeLayout>
